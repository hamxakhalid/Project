@{
    ViewBag.Title = "Signin";
}
@model ads.Models.User

  <div class="container">

<div class="row" style="margin-top:80px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		<form action="/SignUp/loginUser" method="post">
            <h2>Please Sign In </h2>
		
				<hr class="colorgraph">
				<div class="form-group">
                    <input data-val="true" data-val-required="This must be a Name" type="text" name="username" id="email" class="form-control input-lg" placeholder="Enter Your User Name"/>
				<span class="field-validation-valid" data-valmsg-for="username" data-valmsg-replace="true"></span>
                </div>
				<div class="form-group">
                    <input data-val="true" data-val-required="This must be a Password" type="password" name="password" id="password" class="form-control input-lg" placeholder="Enter Your Password"/>
			<span class="field-validation-valid" data-valmsg-for="password" data-valmsg-replace="true"></span>
                    	</div>
					
				
				<hr class="colorgraph">
				<div class="row">
					<div class="col-xs-6 col-sm-6 col-md-6">
                        <input type="submit" class="btn btn-lg btn-danger btn-block" value="Sign In">
					</div>
					<div class="col-xs-6 col-sm-6 col-md-6">
						

					</div>
				</div>
			
		</form>
	</div>
</div>
       @Scripts.Render("~/bundles/jqueryval")