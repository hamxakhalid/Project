@{
    ViewBag.Title = "SignUp";
}
@model ads.Models.User


@Scripts.Render("~/bundles/jquery")
<script>

        $(document).ready(function () {

        

            $('#c1').click(function () {
               
                var userName = $('#un').val();

               
             
                $.getJSON("/SignUp/CheckUserName?UserName=" + userName, function (data)
                {
                   
                    if (data) {
                        $('#result').text("User already exists in database");
                        
                    }
                    else {
                        $('#result').text("User Name is available");
                    }
                });

            });

        });
    </script>




<div class="container" style="margin-top:100px">

<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		@using (Html.BeginForm("Save","SignUp",FormMethod.Post)){
      
			<h2>Please Sign Up <small>It's free & always will be.</small></h2>
			<hr class="colorgraph">
			<div class="row">
				<div class="col-xs-6 col-sm-6 col-md-6">
					<div class="form-group">
                        @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name", type = "text", })
                         @Html.ValidationMessageFor(m => m.FirstName)
					</div>
				</div>
				<div class="col-xs-6 col-sm-6 col-md-6">
					<div class="form-group">
                        @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name", type = "text", })
						 @Html.ValidationMessageFor(m => m.LastName)
					</div>
				</div>
			</div>
			<div class="form-group">
                @Html.TextBoxFor(m => m.UserName, new { placeholder = "Your User Name", type = "text",id="un" })
				 @Html.ValidationMessageFor(m => m.UserName)
                <input type ="button" id="c1"  value="Check"class="btn btn-primary"  />
                <div id="result"></div>
			</div>
			<div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Your Email", type = "text", })
				 @Html.ValidationMessageFor(m => m.Email)
			</div>
			<div class="row">
				<div class="col-xs-6 col-sm-6 col-md-6">
					<div class="form-group">
                        @Html.TextBoxFor(m => m.Password, new { placeholder = "Enter Your Password", type = "password", })
						 @Html.ValidationMessageFor(m => m.Password)
					</div>
				</div>
				
			</div>
			<div class="row">
				<div class="col-xs-9 col-sm-9 col-md-9">
					<span class="button-checkbox">
						By clicking <strong class="label label-primary">Register</strong>, you agree to the Terms and Conditions set out by this site.
					</span>
				</div>
				
			</div>
			
			<hr class="colorgraph">
			<div class="row">
				<div class="col-xs-6 col-md-6"><input type="submit" value="Register" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
			</div>
  }	@*</form>*@
	</div>
</div>
    

    @Scripts.Render("~/bundles/jqueryval")
